{
  "compilerOptions": {
    "isolatedModules": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES2019",
    "lib": ["es2019", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": ["./lib/**/*", "./examples/**/*"]
}
