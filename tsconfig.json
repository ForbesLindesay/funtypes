{
  "compilerOptions": {
    "skipLibCheck": true,
    "isolatedModules": true,
    "module": "ES2015",
    "moduleResolution": "node",
    "target": "ES2020",
    "lib": ["es2020", "dom"],
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "declaration": true,
    "sourceMap": true,
    "outDir": "lib",
    "forceConsistentCasingInFileNames": true,
    "experimentalDecorators": true
  },
  "exclude": ["docs", "./lib/**/*", "./examples/**/*", "./test-output/**/*"]
}
